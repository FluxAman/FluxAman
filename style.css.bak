/* Self-Hosted Fonts - Aesthetic & Trending 2024-2025 */
@font-face {
  font-family: 'Space Grotesk';
  font-style: normal;
  font-weight: 300 700;
  font-display: swap;
  src: url('./fonts/space-grotesk.woff2') format('woff2');
}

@font-face {
  font-family: 'Sora';
  font-style: normal;
  font-weight: 300 800;
  font-display: swap;
  src: url('./fonts/sora.woff2') format('woff2');
}

:root {
  --bg-main: #0a0f1f;
  --bg-card: rgba(18, 28, 51, 0.6);
  --accent: #38bdf8;
  --accent-2: #818cf8;
  --accent-3: #c084fc;
  --text-main: #f8fafc;
  --text-muted: #94a3b8;
  --radius: 16px;
  --glow: 0 0 40px rgba(56, 189, 248, 0.3);
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  scroll-behavior: smooth;
}

body {
  margin: 0;
  padding: 0;
  font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: var(--bg-main);
  color: var(--text-main);
  line-height: 1.6;
  overflow-x: hidden;
  position: relative;
}

/* Animated Gradient Background */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #0a0f1f 0%, #1e1b4b 50%, #0f172a 100%);
  z-index: -2;
  animation: gradientShift 15s ease infinite;
}

@keyframes gradientShift {

  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0.8;
  }
}

/* Particle Grid Background */
body::after {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image:
    radial-gradient(circle at 20% 30%, rgba(56, 189, 248, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(129, 140, 248, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 50% 50%, rgba(192, 132, 252, 0.05) 0%, transparent 50%);
  z-index: -1;
  animation: particleFloat 20s ease-in-out infinite;
}

@keyframes particleFloat {

  0%,
  100% {
    transform: translateY(0px);
  }

  50% {
    transform: translateY(-20px);
  }
}

.container {
  max-width: 1200px;
  margin: auto;
  padding: 0 24px;
}

section {
  padding: 96px 0;
  position: relative;
}

/* Navbar with Glassmorphism */
.navbar {
  position: sticky;
  top: 0;
  background: rgba(10, 15, 31, 0.7);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border-bottom: 1px solid rgba(56, 189, 248, 0.1);
  z-index: 100;
  transition: all 0.3s ease;
}

.navbar:hover {
  background: rgba(10, 15, 31, 0.85);
  border-bottom-color: rgba(56, 189, 248, 0.2);
}

.nav-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70px;
}

.logo {
  font-family: 'Sora', sans-serif;
  font-weight: 800;
  font-size: 24px;
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.5px;
}

nav {
  display: flex;
  gap: 8px;
}

nav a {
  color: var(--text-main);
  text-decoration: none;
  padding: 8px 16px;
  font-weight: 500;
  border-radius: 8px;
  transition: all 0.3s ease;
  position: relative;
}

nav a::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: linear-gradient(90deg, var(--accent), var(--accent-2));
  transform: translateX(-50%);
  transition: width 0.3s ease;
}

nav a:hover {
  color: var(--accent);
  background: rgba(56, 189, 248, 0.1);
}

nav a:hover::before {
  width: 80%;
}

/* Premium Buttons */
.btn {
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  border: none;
  padding: 12px 28px;
  border-radius: 999px;
  font-weight: 600;
  cursor: pointer;
  color: white;
  font-size: 14px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(56, 189, 248, 0.3);
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.btn:hover::before {
  left: 100%;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 25px rgba(56, 189, 248, 0.5);
}

.btn.ghost {
  background: transparent;
  color: var(--accent);
  border: 2px solid var(--accent);
  box-shadow: none;
}

.btn.ghost:hover {
  background: rgba(56, 189, 248, 0.1);
  border-color: var(--accent-2);
  box-shadow: 0 0 20px rgba(56, 189, 248, 0.3);
}

/* Hero Section */
.hero {
  min-height: 120vh;
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 !important;
}

.hero-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 64px;
  align-items: center;
}

.hero-text h1 {
  font-family: 'Sora', sans-serif;
  font-size: 42px;
  font-weight: 800;
  line-height: 1.2;
  margin-bottom: 20px;
  letter-spacing: -1px;
}

.hero h1 span {
  background: linear-gradient(135deg, var(--accent), var(--accent-2), var(--accent-3));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradientFlow 3s ease infinite;
  background-size: 200% 200%;
}

@keyframes gradientFlow {

  0%,
  100% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }
}

.hero-text p {
  font-size: 20px;
  color: var(--text-muted);
  margin-bottom: 28px;
  line-height: 1.7;
}

.hero-actions {
  display: flex;
  gap: 16px;
}

.hero-visual {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hero-photo-container {
  position: relative;
  width: 100%;
  max-width: 450px;
  height: 450px;
  border-radius: var(--radius);
  overflow: hidden;
  z-index: 1;
}

.hero-photo-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  transition: opacity 1s ease-in-out;
}

.hero-photo-container img.active {
  opacity: 1;
}

.hero-photo-container::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40%;
  background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.8));
  z-index: 2;
  pointer-events: none;
}

.hero-glow {
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, var(--accent) 0%, var(--accent-2) 50%, transparent 70%);
  opacity: 0.2;
  border-radius: 50%;
  filter: blur(60px);
  animation: pulse 4s ease-in-out infinite;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 0;
}

@keyframes pulse {

  0%,
  100% {
    transform: scale(1);
    opacity: 0.2;
  }

  50% {
    transform: scale(1.1);
    opacity: 0.3;
  }
}

/* Section Titles */
.section-title {
  font-family: 'Sora', sans-serif;
  font-size: 42px;
  font-weight: 800;
  margin-bottom: 56px;
  text-align: center;
  letter-spacing: -0.5px;
}

.section-title span {
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Card Grid */
.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 28px;
}

/* Premium Glassmorphism Cards */
.card {
  background: var(--bg-card);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  padding: 32px;
  border-radius: var(--radius);
  border: 1px solid rgba(56, 189, 248, 0.2);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(56, 189, 248, 0.1), rgba(129, 140, 248, 0.1));
  opacity: 0;
  transition: opacity 0.4s ease;
}

.card:hover::before {
  opacity: 1;
}

.card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: var(--glow);
  border-color: rgba(56, 189, 248, 0.4);
}

.card h3 {
  font-family: 'Sora', sans-serif;
  font-size: 22px;
  font-weight: 700;
  margin-bottom: 12px;
  color: var(--text-main);
  position: relative;
  z-index: 1;
}

.card p {
  color: var(--text-muted);
  line-height: 1.6;
  position: relative;
  z-index: 1;
}

/* Stats Section */
.stats {
  background: linear-gradient(135deg, rgba(56, 189, 248, 0.05), rgba(129, 140, 248, 0.05));
  border-top: 1px solid rgba(56, 189, 248, 0.1);
  border-bottom: 1px solid rgba(56, 189, 248, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 32px;
  text-align: center;
}

.stats-grid>div {
  padding: 24px;
  border-radius: var(--radius);
  background: rgba(18, 28, 51, 0.4);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(56, 189, 248, 0.15);
  transition: all 0.3s ease;
}

.stats-grid>div:hover {
  transform: translateY(-4px);
  border-color: rgba(56, 189, 248, 0.3);
  box-shadow: 0 8px 25px rgba(56, 189, 248, 0.2);
}

.stats-grid h3 {
  font-family: 'Sora', sans-serif;
  font-size: 48px;
  font-weight: 800;
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8px;
}

.stats-grid p {
  color: var(--text-muted);
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* About Section */
.about-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 64px;
  align-items: center;
}

.about-grid .section-title {
  text-align: left;
  margin-bottom: 24px;
}

.about-grid p {
  font-size: 18px;
  line-height: 1.8;
  color: var(--text-muted);
}

/* Skills */
.skills {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.skill {
  position: relative;
}

.skill span {
  display: block;
  margin-bottom: 12px;
  font-weight: 600;
  color: var(--text-main);
}

.bar {
  background: rgba(2, 6, 23, 0.8);
  border-radius: 999px;
  overflow: hidden;
  height: 12px;
  border: 1px solid rgba(56, 189, 248, 0.2);
  position: relative;
}

.bar div {
  height: 100%;
  background: linear-gradient(90deg, var(--accent), var(--accent-2));
  border-radius: 999px;
  transition: width 1.5s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 0 15px rgba(56, 189, 248, 0.5);
  position: relative;
  overflow: hidden;
}

.bar div::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }

  100% {
    transform: translateX(100%);
  }
}


/* Project Cards */
.project {
  height: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  font-family: 'Sora', sans-serif;
  background-size: cover;
  background-position: center;
  position: relative;
  color: white;
  overflow: hidden;
  cursor: pointer;
  padding: 24px;
}

.project::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(10, 15, 31, 0.3), rgba(10, 15, 31, 0.8));
  transition: all 0.3s ease;
  z-index: 0;
}

.project:hover::after {
  background: linear-gradient(to bottom, rgba(56, 189, 248, 0.4), rgba(129, 140, 248, 0.6));
}

.project-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 2;
  color: white;
}

.project:hover .project-overlay {
  opacity: 1;
}

.project-info {
  position: relative;
  z-index: 1;
  text-align: left;
  width: 100%;
  transition: transform 0.3s ease;
}

.project:hover .project-info {
  transform: translateY(10px);
}


/* YouTube Videos Section */
.videos-scroll-container {
  position: relative;
  overflow: hidden;
  margin: 0 -24px;
  padding: 0 24px;
}

.videos-horizontal {
  display: flex;
  gap: 24px;
  overflow-x: auto;
  scroll-behavior: smooth;
  padding: 20px 0;
  -webkit-overflow-scrolling: touch;
}

.videos-horizontal::-webkit-scrollbar {
  height: 8px;
}

.videos-horizontal::-webkit-scrollbar-track {
  background: rgba(10, 15, 31, 0.5);
  border-radius: 4px;
}

.videos-horizontal::-webkit-scrollbar-thumb {
  background: linear-gradient(90deg, var(--accent), var(--accent-2));
  border-radius: 4px;
}

.videos-horizontal::-webkit-scrollbar-thumb:hover {
  background: var(--accent);
}

.video-card {
  flex: 0 0 320px;
  background: var(--bg-card);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: var(--radius);
  border: 1px solid rgba(56, 189, 248, 0.2);
  overflow: hidden;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  height: 180px;
}

.video-card:hover {
  transform: translateY(-8px);
  border-color: rgba(56, 189, 248, 0.4);
  box-shadow: 0 0 30px rgba(56, 189, 248, 0.3);
}

.video-thumbnail {
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  position: relative;
}

.video-thumbnail::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, transparent, rgba(10, 15, 31, 0.3));
}

.video-play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70px;
  height: 70px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  transition: all 0.3s ease;
}

.video-card:hover .video-play-icon {
  background: var(--accent);
  transform: translate(-50%, -50%) scale(1.15);
}

.video-play-icon i {
  color: #0a0f1f;
  font-size: 28px;
  margin-left: 4px;
}

.video-card:hover .video-play-icon i {
  color: white;
}

/* Video Modal */
.video-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  align-items: center;
  justify-content: center;
}

.video-modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.video-modal-content {
  position: relative;
  width: 90%;
  max-width: 1200px;
  z-index: 10000;
  animation: modalFadeIn 0.3s ease;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}

.video-modal-close {
  position: absolute;
  top: -40px;
  right: 0;
  font-size: 36px;
  color: white;
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 10001;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-modal-close:hover {
  color: var(--accent);
  transform: rotate(90deg);
}

.video-modal-player {
  position: relative;
  padding-bottom: 56.25%;
  /* 16:9 aspect ratio */
  height: 0;
  overflow: hidden;
  border-radius: var(--radius);
  border: 2px solid rgba(56, 189, 248, 0.3);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
}

.video-modal-player iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: var(--radius);
}


/* Contact Form */
.contact-form {
  max-width: 600px;
  margin: 0 auto;
}

.contact-form input,
.contact-form textarea {
  width: 100%;
  margin-bottom: 20px;
  padding: 16px 20px;
  border-radius: var(--radius);
  border: 1px solid rgba(56, 189, 248, 0.2);
  background: var(--bg-card);
  backdrop-filter: blur(20px);
  color: var(--text-main);
  font-family: 'Inter', sans-serif;
  font-size: 15px;
  transition: all 0.3s ease;
}

.contact-form input:focus,
.contact-form textarea:focus {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 20px rgba(56, 189, 248, 0.3);
}

.contact-form textarea {
  min-height: 150px;
  resize: vertical;
}

.contact-form input::placeholder,
.contact-form textarea::placeholder {
  color: var(--text-muted);
}

/* Footer */
footer {
  text-align: center;
  padding: 48px 24px;
  color: var(--text-muted);
  border-top: 1px solid rgba(56, 189, 248, 0.1);
  background: rgba(10, 15, 31, 0.5);
  backdrop-filter: blur(10px);
}

footer p {
  font-size: 14px;
}

/* Responsive Design */
@media (max-width: 768px) {

  /* Container & Sections */
  .container {
    padding: 0 16px;
  }

  section {
    padding: 64px 0;
  }

  /* Navbar */
  .navbar {
    position: sticky;
  }

  .nav-inner {
    height: 60px;
  }

  .logo {
    font-size: 20px;
  }

  nav {
    display: none;
  }

  .navbar .btn {
    padding: 8px 16px;
    font-size: 13px;
  }

  /* Hero Section */
  .hero {
    min-height: auto;
    padding: 40px 0 60px 0;
  }

  .hero-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .hero-text {
    text-align: center;
    order: 2;
  }

  .hero-visual {
    order: 1;
  }

  .hero-text h1 {
    font-size: 32px;
  }

  .hero-text p {
    font-size: 16px;
  }

  .hero-actions {
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-photo-container {
    max-width: 100%;
    height: 350px;
  }

  .hero-glow {
    width: 250px;
    height: 250px;
  }

  /* Section Titles */
  .section-title {
    font-size: 28px;
    margin-bottom: 40px;
  }

  /* Cards */
  .card-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .card {
    padding: 24px;
  }

  /* Stats */
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .stats-grid>div {
    padding: 16px;
  }

  .stats-grid h3 {
    font-size: 36px;
  }

  /* About Section */
  .about-grid {
    grid-template-columns: 1fr;
    gap: 32px;
  }

  .about-grid p {
    font-size: 16px;
  }

  /* Projects */
  .project {
    height: 250px;
    padding: 20px;
  }

  /* Videos */
  .videos-scroll-container {
    margin: 0 -16px;
    padding: 0 16px;
  }

  .video-card {
    flex: 0 0 280px;
  }

  /* Contact Form */
  .contact-form {
    padding: 24px;
  }

  .contact-form input,
  .contact-form textarea {
    font-size: 16px;
    /* Prevents zoom on iOS */
  }

  /* Footer */
  footer {
    padding: 32px 0;
  }

  footer p {
    font-size: 14px;
  }

  /* Buttons */
  .btn {
    padding: 10px 20px;
    font-size: 14px;
  }
}

/* Small Mobile Devices */
@media (max-width: 480px) {

  .hero-text h1 {
    font-size: 28px;
  }

  .hero-photo-container {
    height: 300px;
  }

  .section-title {
    font-size: 24px;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .hero-actions {
    flex-direction: column;
    width: 100%;
  }

  .hero-actions .btn {
    width: 100%;
  }

  .video-card {
    flex: 0 0 240px;
  }
}

/* Admin Panel Responsive */
@media (max-width: 768px) {

  .admin-container {
    padding: 16px;
    margin: 20px auto;
  }

  .admin-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
  }

  .admin-header h1 {
    font-size: 24px;
  }

  .admin-actions {
    width: 100%;
  }

  .admin-actions .btn {
    width: 100%;
  }

  /* Tabs */
  .tab-btn {
    font-size: 13px;
    padding: 10px 12px;
  }

  .tab-btn i {
    display: none;
  }

  /* Forms */
  .project-form {
    padding: 20px;
  }

  .form-group label {
    font-size: 14px;
  }

  /* Grids */
  .projects-grid,
  .videos-horizontal {
    grid-template-columns: 1fr;
  }

  .project-admin-card {
    max-width: 100%;
  }

  /* Stats */
  .stats {
    grid-template-columns: 1fr;
  }

  .stat-card h2 {
    font-size: 28px;
  }

  /* Message Cards */
  .message-card {
    padding: 16px;
  }

  .message-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }

  .message-actions {
    width: 100%;
    justify-content: flex-start;
  }
}